<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_title_hei"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <View
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/item_title"
        android:textColor="@color/tv_black01"
        android:layout_marginLeft="@dimen/tv_marginLeft"
        tools:text="精选课程"
        />

    <TextView
        android:gravity="left"
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/item_more_paddingLeft"
        android:textSize="@dimen/item_title"
        android:text="更多"
        android:visibility="gone"
        />

</LinearLayout>